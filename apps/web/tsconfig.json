{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    ".next/types/**/*.ts",
    "../../packages/types/src/supabase.ts",
  ],
  "exclude": [
    "node_modules",
    "supabase"
  ]
}