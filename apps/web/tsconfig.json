{
  "extends": "@tuturuuu/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    ".next/types/**/*.ts",
    "../../packages/ui/src/components/ui/custom/workspace-select.tsx",
    "../../packages/utils/src/name-helper.ts",
    "../../packages/ai/src/calendar/events.ts"
  ],
  "exclude": ["node_modules"]
}
